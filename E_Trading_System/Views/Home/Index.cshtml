    <script>
    function search() {
        var searchInput = document.getElementById("SearchInput").value.toLowerCase();
        switch (searchInput) {
            case "grocerry":
                window.location.href = "@Url.Action("Index", "ProductData")";
                break;
            case "electronics":
                window.location.href = "@Url.Action("Index", "EProductData")";
                break;
            case "mobiles & tablets":
                window.location.href = "@Url.Action("Index", "MTProductData")";
                break;
            case "fashion":
                window.location.href = "@Url.Action("Index", "FProductData")";
                break;
            default:
                // Customizing alert box
                var alertBox = document.createElement("div");
                alertBox.setAttribute("class", "custom-alert");
                alertBox.innerHTML = "Category not found!";
                document.body.appendChild(alertBox);
                // Remove the alert box after a delay
                setTimeout(function() {
                    document.body.removeChild(alertBox);
                }, 3000);
                break;
        }
    }
    </script>





